@model SportData.Models.Employe

@{
    ViewData["Title"] = "Inscription";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportData</title>

    <!-- Import Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f6f9;
        }

        .auth-box {
            width: 100%;
            max-width: 400px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

            .auth-box h1 {
                font-size: 1.8rem;
                font-weight: bold;
                color: #007bff;
                text-align: center;
                margin-bottom: 10px;
            }

            .auth-box h4 {
                font-size: 1rem;
                color: #6c757d;
                text-align: center;
                margin-bottom: 20px;
            }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary {
            border-radius: 5px;
            font-weight: bold;
        }

        .btn-secondary {
            border-radius: 5px;
        }

        .back-link {
            margin-top: 15px;
            text-align: center;
        }

            .back-link a {
                color: #6c757d;
                text-decoration: none;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-box">
            <h1>Inscription</h1>
            <h4 class="text-muted">Veuillez remplir les champs ci-dessous</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <p>Nom</p>
                    <input asp-for="Nom" class="form-control" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <p>Prenom</p>
                    <input asp-for="Prenom" class="form-control" />
                    <span asp-validation-for="Prenom" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <p>Adresse Courriel</p>
                    <input asp-for="AdresseCourriel" class="form-control" />
                    <span asp-validation-for="AdresseCourriel" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <p>Mot de passe</p>
                    <input asp-for="MotDePasse" class="form-control" type="password" />
                    <span asp-validation-for="MotDePasse" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <p>Organisation</p>
                    <select asp-for="IdOrganisation" class="form-control" asp-items="ViewBag.IdOrganisation">
                        <option value="">Sélectionnez une organisation</option>
                    </select>
                    <span asp-validation-for="IdOrganisation" class="text-danger"></span>
                </div>

                <p></p>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Valider</button>
                </div>
            </form>
            <p></p>
            <div class="back-link">
                <a asp-action="PageLoginEmploye" asp-controller="Employe">Retour</a>
            </div>
        </div>
    </div>

    <!-- Importation des scripts Bootstrap et dépendances -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
