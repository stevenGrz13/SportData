<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportData</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header */
        header {
            background-color: #007bff;
            color: #ffffff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 10px 20px;
        }

        .header-container {
            display: flex;
            align-items: center;
        }

            .header-container img {
                max-width: 40px;
                margin-right: 10px;
            }

            .header-container h1 {
                font-size: 1.5rem;
                margin: 0;
            }

        /* Sidebar */
        .content-wrapper {
            display: flex;
            flex-grow: 1;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: #f8f9fa;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

            .sidebar li {
                margin-bottom: 10px;
            }

            .sidebar a {
                color: #f8f9fa;
                text-decoration: none;
                padding: 10px 15px;
                display: block;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        /* Main Content */
        main {
            flex-grow: 1;
            padding: 20px;
        }

        /* Footer */
        footer {
            background-color: #212529;
            color: #ced4da;
            text-align: center;
            padding: 20px 0;
        }

            footer a {
                color: #f8f9fa;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header-container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/sport.jpg" alt="SportData Logo" />
                <h1>SportData</h1>
            </a>
        </div>
    </header>

    <!-- Main Content Area -->
    <div class="content-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <ul>
                <li><a href="/Coach/Index">Coachs</a></li>
                <li><a href="/Sport/Index">Sports</a></li>
                <li><a href="/Organisation/Index">Organisations</a></li>
                <li><a href="/Evenement/Index">Calendrier</a></li>
                <li><a href="/Evenement/Index">Evenement</a></li>
                <li><a href="#">Dashboard</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main>
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 - SportData - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
